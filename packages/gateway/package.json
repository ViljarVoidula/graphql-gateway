{
  "name": "hot-internal-service-gateway",
  "version": "0.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build:admin": "webpack --mode=production",
    "dev:admin": "webpack serve --mode=development",
    "build": "npm run build:admin && tsc",
    "test": "NODE_ENV=test node --test --experimental-test-coverage --test-coverage-include='src/**/*.ts' --test-coverage-exclude='src/**/*.test.ts' --require ts-node/register 'src/**/*.test.ts'",
    "test:watch": "NODE_ENV=test node --test --watch --require ts-node/register 'src/**/*.test.ts'",
    "db:create": "set -a && [ -f .env.local ] && . ./.env.local && [ -f .env ] && . ./.env && set +a && ts-node src/db/create-database.ts",
    "migration:generate": "set -a && [ -f .env.local ] && . ./.env.local && [ -f .env ] && . ./.env && set +a && typeorm-ts-node-commonjs migration:generate -d src/db/datasource.ts",
    "migration:run": "npm run db:create && set -a && [ -f .env.local ] && . ./.env.local && [ -f .env ] && . ./.env && set +a && typeorm-ts-node-commonjs migration:run -d src/db/datasource.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/db/datasource.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/db/datasource.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@escape.tech/graphql-armor": "3.1.6",
    "@graphql-authz/core": "1.3.2",
    "@graphql-authz/directive": "1.1.6",
    "@graphql-tools/delegate": "^10.2.20",
    "@graphql-tools/executor-http": "^2.0.0",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/stitch": "^9.0.4",
    "@graphql-tools/stitching-directives": "^3.0.4",
    "@graphql-tools/utils": "^10.2.0",
    "@graphql-yoga/plugin-graphql-sse": "3.6.2",
    "@graphql-yoga/redis-event-target": "3.0.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.0.0",
    "@types/redis": "4.0.11",
    "bcrypt": "6.0.0",
    "class-validator": "0.14.2",
    "graphql": "16.11.0",
    "graphql-request": "^6.1.0",
    "graphql-scalars": "1.24.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "5.15.1",
    "jsonwebtoken": "9.0.2",
    "nodemailer": "^7.0.6",
    "pg": "8.16.3",
    "redis": "5.6.0",
    "reflect-metadata": "0.2.2",
    "type-graphql": "2.0.0-rc.2",
    "typedi": "0.10.0",
    "typeorm": "0.3.25",
    "wait-on": "8.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@envelop/types": "5.2.1",
    "@mantine/core": "^5.10.5",
    "@mantine/hooks": "^5.10.5",
    "@mantine/notifications": "^5.10.5",
    "@refinedev/core": "^4.57.10",
    "@refinedev/graphql": "^7.1.3",
    "@refinedev/kbar": "^1.3.9",
    "@refinedev/mantine": "^2.36.2",
    "@refinedev/react-hook-form": "^4.10.2",
    "@refinedev/react-router-v6": "^4.6.2",
    "@refinedev/react-table": "^5.6.17",
    "@tabler/icons": "^2.47.0",
    "@tabler/icons-react": "^3.34.0",
    "@types/bcrypt": "5.0.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.11.0",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.5",
  "react-router-dom": "^6.23.1",
  "style-loader": "^3.3.4",
  "testcontainers": "10.14.0",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.8.3",
